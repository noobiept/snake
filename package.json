{
    "name": "snake",
    "version": "3.0.0",
    "description": "A snake game, with several maps to choose from, plus a 2 player mode!",
    "packageManager": "npm@10.8.1",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "dev:w": "tsc --watch",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "format:check": "prettier --check \"**/*.{html,css,json,js,ts,md}\"",
        "format:run": "prettier --write \"**/*.{html,css,json,js,ts,md}\"",
        "check:types": "tsc -p tsconfig.json --noEmit --skipLibCheck",
        "lint": "eslint source",
        "lint:dependencies": "dpdm --exit-code circular:1 source/main.ts",
        "lint:unused": "ts-unused-exports tsconfig.json",
        "test": "vitest run --coverage",
        "test:w": "vitest"
    },
    "dependencies": {
        "@drk4/utilities": "^6.2.1",
        "easeljs": "^1.0.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.6.0",
        "@types/createjs": "^0.0.32",
        "@types/node": "^20.14.10",
        "@vitest/coverage-v8": "^2.0.2",
        "dpdm": "^3.14.0",
        "eslint": "^8.57.0",
        "globals": "^15.8.0",
        "prettier": "^3",
        "ts-unused-exports": "^10.1.0",
        "typescript": "^5",
        "typescript-eslint": "^7.15.0",
        "vite": "^5",
        "vite-tsconfig-paths": "^4.3.2",
        "vitest": "^2.0.2"
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "trailingComma": "es5",
        "bracketSpacing": true,
        "arrowParens": "always",
        "htmlWhitespaceSensitivity": "strict",
        "endOfLine": "lf"
    }
}
